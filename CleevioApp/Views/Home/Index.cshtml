@model IEnumerable<CleevioApp.Models.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>All invoices</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var inv in Model) {
    <tr>
        <td>
            @Html.DisplayFor(i => inv.Date)
        </td>
        <td>
            @Html.DisplayFor(i => inv.ClientName)
        </td>
        <td>
            @Html.DisplayFor(i => inv.Address)
        </td>
        <td>
            @Html.DisplayFor(i => inv.PaymentStatus)
        </td>
        <td>
            @Html.DisplayFor(i => inv.Total)
        </td>
        <td>
            @Html.ActionLink("Invoice details", "Details", "Details", new { id = inv.InvoiceId }, null) |
            @Html.ActionLink("Edit invoice", "Edit", "Home", new { id = inv.InvoiceId }, null)
        </td>
    </tr>
}

</table>
